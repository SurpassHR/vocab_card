{
  "name": "electron-frontend",
  "version": "1.0.0",
  "description": "test desc",
  "license": "ISC",
  "author": "Hu Rui",
  "scripts": {
    "dev:electron": "cd src-electron&& npm run dev",
    "build:electron": "cd src-electron&& npm run build",
    "install:electron": "cd src-electron&& npm install",
    "dev:react": "cd src-react&& npm run dev",
    "cross-dev:react": "cd src-react&& npm run cross-dev",
    "build:react": "cd src-react&& npm run build",
    "install:react": "cd src-react&& npm install",
    "cp:backend": "cp-backend.bat",
    "cp:config": "cp -f ./config.yaml ./src-electron",
    "dev:all": "set REACT_DEV_PORT=9999&& cross-env BROWSER=none&& set BROWSER=none&& npm run cp:backend&& npm run cp:config&& concurrently \"npm run cross-dev:react\" \"npm run dev:electron\"",
    "build:all": "npm run cp:backend&& npm run cp:config&& npm run build:react&& npm run build:electron",
    "install:all": "concurrently \"npm run install:react\" \"npm run install:electron\""
  },
  "dependencies": {
    "concurrently": "^9.1.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  }
}